pipeline {
    agent any
     environment {
        K6_PATH = "C:\\Program Files\\k6\\k6.exe"  // Specify the correct path to your k6 executable
    }
       stages {
        stage('Verify k6') {
            steps {
                bat "${K6_PATH} version"
            }
        }
        stage('Run k6 test') {
            steps {
                bat '\'${K6_PATH}\' run --vus 2 -- iterations 5 --duration 30s .idea\\test4.js'
            }
        }
    }
}
